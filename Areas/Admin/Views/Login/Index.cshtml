@model Cafe_manager.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <title>Đăng nhập quản trị | Website quản trị v2.0</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Assest/Admin/login/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assest/Admin/login/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Assest/Admin/login/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assest/Admin/login/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assest/Admin/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Assest/Admin/login/css/main.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
</head>

<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Assest/Admin/login/images/team.jpg" alt="IMG">
                </div>
                <!--=====TIÊU ĐỀ======-->
                <div class="login100-form validate-form">
                    <span class="login100-form-title">
                        <b>ĐĂNG NHẬP HỆ THỐNG QUẢN LÝ QUÁN CAFE</b>
                    </span>
                    <!--=====FORM INPUT TÀI KHOẢN VÀ PASSWORD======-->
                    @using (Html.BeginForm("LoginModelAction", "Login", FormMethod.Post))
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="wrap-input100 validate-input">
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control", @autofocus = "autofocus" })
                        </div>
                        <div class="wrap-input100 validate-input">
                            @Html.PasswordFor(model => model.Password, new { placeholder = "Password", @class = "form-control" })
                        </div>

                        <!--=====ĐĂNG NHẬP======-->
                       
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary btn-block">Đăng Nhập</button>
                        </div>
                        <!--=====LINK TÌM MẬT KHẨU======-->
                        <div class="text-right p-t-12">
                            <a class="txt2" href="#">
                                Bạn quên mật khẩu?
                            </a>
                        </div>
                    }

                    <!--=====FOOTER======-->
                    <div class="text-center p-t-70 txt2">
                        Phần mềm quản lý bán hàng <i class="far fa-copyright" aria-hidden="true"></i>
                        <a class="txt2" href="#"> </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Javascript-->
    <script src="~/Assest/Admin/login/js/main.js"></script>
    <script src="https://unpkg.com/boxicons@latest/dist/boxicons.js"></script>
    <script src="~/Assest/Admin/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Assest/Admin/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Assest/Admin/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assest/Admin/login/vendor/select2/select2.min.js"></script>
   
</body>

</html>